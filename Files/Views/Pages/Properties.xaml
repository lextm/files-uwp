<Page
    x:Class="Files.Properties"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Windows10version1903="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract, 8)"
    xmlns:controls="using:Windows.UI.Xaml.Controls"
    xmlns:local="using:Files"
    xmlns:local1="using:Files.Helpers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="475"
    d:DesignWidth="400"
    mc:Ignorable="d"
    RequestedTheme="{x:Bind local1:ThemeHelper.RootTheme}">
    <Page.Background>
        <AcrylicBrush
            Windows10version1903:TintLuminosityOpacity="0.9"
            BackgroundSource="HostBackdrop"
            FallbackColor="{Binding FallbackColor, Mode=OneWay}"
            TintColor="{Binding TintColor, Mode=OneWay}"
            TintOpacity="{Binding TintOpacity, Mode=OneWay}"
            AlwaysUseFallback="{Binding AcrylicEnabled, Mode=OneWay}" />
    </Page.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            x:Uid="PropertiesTitleSecondary"
            Margin="14,6,0,0"
            Text="Properties" />
        <StackPanel
            Grid.Row="1"
            Padding="14"
            VerticalAlignment="Top">
            <Grid RowSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid
                    x:Name="Icon"
                    Grid.Row="0"
                    Grid.Column="0"
                    Width="80"
                    Height="80"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                    <controls:FontIcon
                        x:Name="FolderGlyphIcon"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Stretch"
                        x:Load="{x:Bind ItemProperties.LoadFolderGlyph, Mode=OneWay}"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="70"
                        Foreground="#ffe793"
                        Glyph="&#xE8D5;" />
                    <FontIcon
                        x:Name="EmptyImageIcon"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Stretch"
                        x:Load="{x:Bind ItemProperties.LoadUnknownTypeGlyph, Mode=OneWay}"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="70"
                        Glyph="&#xE7C3;" />
                    <Image
                        x:Name="itemIcon"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        x:Load="{x:Bind ItemProperties.LoadFileIcon, Mode=OneWay}"
                        Source="{x:Bind ItemProperties.FileIconSource, Mode=OneWay}" />
                </Grid>
                <TextBox
                    x:Name="itemFileName"
                    x:Uid="PropertiesItemFileName"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    BorderThickness="1"
                    IsReadOnly="True"
                    Text="{x:Bind ItemProperties.ItemName, Mode=OneWay}" />
                <MenuFlyoutSeparator
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="-12,0"
                    HorizontalAlignment="Stretch" />
                <TextBlock
                    x:Uid="PropertiesItemType"
                    Grid.Row="2"
                    Grid.Column="0"
                    Text="Item type:" />
                <TextBlock
                    x:Name="itemTypeValue"
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="20,0,0,0"
                    IsTextSelectionEnabled="True"
                    Text="{x:Bind ItemProperties.ItemType, Mode=OneWay}" />

                <TextBlock
                    x:Uid="PropertiesItemPath"
                    Grid.Row="3"
                    Grid.Column="0"
                    Text="Path:" />
                <TextBlock
                    x:Name="itemPathValue"
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="20,0,0,0"
                    IsTextSelectionEnabled="True"
                    Text="{x:Bind ItemProperties.ItemPath, Mode=OneWay}"
                    TextWrapping="Wrap" />

                <TextBlock
                    x:Uid="PropertiesItemSize"
                    Grid.Row="4"
                    Grid.Column="0"
                    Text="Size:" />
                <TextBlock
                    x:Name="itemSizeValue"
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="20,0,0,0"
                    IsTextSelectionEnabled="True"
                    Text="{x:Bind ItemProperties.ItemSize, Mode=OneWay}" />

                <TextBlock
                    x:Name="PropertiesMD5Hash"
                    x:Uid="PropertiesItemMD5Hash"
                    Grid.Row="5"
                    Grid.Column="0"
                    Text="MD5Hash:"
                    Visibility="{x:Bind ItemProperties.ItemMD5HashVisibility, Mode=OneWay}" />
                <TextBlock
                    x:Name="itemMD5HashValue"
                    Grid.Row="5"
                    Grid.Column="1"
                    Margin="20,0,0,0"
                    IsTextSelectionEnabled="True"
                    Text="{x:Bind ItemProperties.ItemMD5Hash, Mode=OneWay}"
                    Visibility="{x:Bind ItemProperties.ItemMD5HashVisibility, Mode=OneWay}" />
                <ProgressBar
                    x:Name="ItemMD5HashProgress"
                    Grid.Row="5"
                    Grid.Column="1"
                    Margin="20,0,0,0"
                    IsIndeterminate="True"
                    Visibility="{x:Bind ItemProperties.ItemMD5HashProgressVisibility, Mode=OneWay}" />

                <MenuFlyoutSeparator
                    Grid.Row="6"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="-12,0" />

                <TextBlock
                    x:Uid="PropertiesCreated"
                    Grid.Row="7"
                    Grid.Column="0"
                    Text="Created:" />
                <TextBlock
                    x:Name="itemCreatedTimestampValue"
                    Grid.Row="7"
                    Grid.Column="1"
                    Margin="20,0,0,0"
                    IsTextSelectionEnabled="True"
                    Text="{x:Bind ItemProperties.ItemCreatedTimestamp, Mode=OneWay}" />

                <TextBlock
                    x:Uid="PropertiesModified"
                    Grid.Row="8"
                    Grid.Column="0"
                    Text="Modified:" />
                <TextBlock
                    x:Name="itemModifiedTimestampValue"
                    Grid.Row="8"
                    Grid.Column="1"
                    Margin="20,0,0,0"
                    IsTextSelectionEnabled="True"
                    Text="{x:Bind ItemProperties.ItemModifiedTimestamp, Mode=OneWay}" />

                <TextBlock
                    x:Uid="PropertiesAttributes"
                    Grid.Row="9"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Text="Attributes:" />
                <StackPanel
                    Grid.Row="9"
                    Grid.Column="1"
                    Margin="20,0,0,0"
                    Orientation="Horizontal">
                    <CheckBox Content="Read-only" IsEnabled="False" />
                    <CheckBox Content="Hidden" IsEnabled="False" />
                </StackPanel>
            </Grid>
        </StackPanel>
        <Grid Grid.Row="2" Padding="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button
                x:Name="OKButton"
                x:Uid="PropertiesDialogOKButton"
                Grid.Column="1"
                MinWidth="100"
                HorizontalAlignment="Right"
                Click="Button_Click"
                Content="OK"
                Style="{ThemeResource ButtonRevealStyle}" />
        </Grid>
    </Grid>
</Page>