<Page
    x:Class="Files.SettingsPages.FilesAndFolders"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Files"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>

        <ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <StackPanel
                Margin="12,12,8,8"
                Orientation="Vertical"
                Spacing="14">
                <StackPanel.ChildrenTransitions>
                    <TransitionCollection>
                        <RepositionThemeTransition />
                        <ReorderThemeTransition />
                    </TransitionCollection>
                </StackPanel.ChildrenTransitions>

                <TextBlock
                    x:Uid="SettingsFilesAndFoldersTitle"
                    FontSize="22"
                    FontWeight="Medium"
                    Text="Files and Folders" />

                <Grid HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MaxWidth="620" />
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>
                    <Grid.ChildrenTransitions>
                        <TransitionCollection>
                            <RepositionThemeTransition />
                        </TransitionCollection>
                    </Grid.ChildrenTransitions>

                    <TextBlock
                        x:Uid="SettingsFilesAndFoldersShowHiddenFiles"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Text="Show hidden files, folders, and drives"
                        TextWrapping="Wrap" />

                    <ToggleSwitch
                        Grid.Column="1"
                        Width="40"
                        HorizontalAlignment="Right"
                        IsEnabled="False"
                        OffContent=""
                        OnContent="" />
                </Grid>

                <Grid HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MaxWidth="620" />
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>
                    <Grid.ChildrenTransitions>
                        <TransitionCollection>
                            <RepositionThemeTransition />
                        </TransitionCollection>
                    </Grid.ChildrenTransitions>

                    <TextBlock
                        x:Uid="SettingsFilesAndFoldersShowFileExtensions"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Text="Show extensions for known file types"
                        TextWrapping="Wrap" />

                    <ToggleSwitch
                        x:Name="FileExtensionsToggle"
                        Grid.Column="1"
                        Width="40"
                        HorizontalAlignment="Right"
                        IsOn="{Binding ShowFileExtensions, Mode=TwoWay}"
                        OffContent=""
                        OnContent="" />
                </Grid>

                <Grid HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MaxWidth="620" />
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>
                    <Grid.ChildrenTransitions>
                        <TransitionCollection>
                            <RepositionThemeTransition />
                        </TransitionCollection>
                    </Grid.ChildrenTransitions>

                    <TextBlock
                        x:Uid="SettingsFilesAndFoldersShowDriveLetters"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Text="Show drive letters"
                        TextWrapping="Wrap" />

                    <ToggleSwitch
                        Grid.Column="1"
                        Width="40"
                        HorizontalAlignment="Right"
                        IsEnabled="False"
                        OffContent=""
                        OnContent="" />
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>